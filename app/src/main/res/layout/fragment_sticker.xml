<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/close_sticker_button"
        android:layout_above="@id/sticker_recyclerview"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="@drawable/close_button_default"/>
    <Button
        android:id="@+id/clear_sticker_button"
        android:layout_toEndOf="@id/close_sticker_button"
        android:layout_above="@id/sticker_recyclerview"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/remove_sticker"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sticker_recyclerview"
        android:layout_above="@id/sticker_category_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sticker_category_recyclerview"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
